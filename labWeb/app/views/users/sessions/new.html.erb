<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="form-page">
        <div class="form">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
              <%= image_tag("rogerBikes.png", :alt => "Logo", size: "100x100") %>
            </div>
          </div>
          <h2>Iniciar Sesión</h2>
          <%= form_for(resource, as: resource_name, :class => "form-horizontal", url: session_path(resource_name)) do |f| %>
            <div class="form-group">
                <%= f.label :email, :class => "control-label" %><br />
                <%= f.email_field :email, autofocus: true %>
            </div>
            <div class="form-group">
                <%= f.label :contraseña, :class => "control-label" %><br />
                <%= f.password_field :password, autocomplete: "off" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <div class="col-xs-3"></div>
                <div class="col-xs-1"><%= f.check_box :remember_me%></div>
                <div class="col-xs-4"><%= f.label :recuérdame, :class => "control-label"%></div>
              </div>
            <% end -%>
            <div class="form-group">
                <%= f.submit "Iniciar Sesión", :class => "btn btn-default loginBtn", :id => "botonLogin"%>
            </div>
          <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>