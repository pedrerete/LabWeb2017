<div class="col-sm-offset-4 col-sm-4 centered">
  <div class="form-page">
    <div class="form">
      <%= image_tag("rogerBikes.png", :alt => "Logo", size: "100x100") %>
      <h2>Iniciar Sesión</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.label :email, :class => "formLabel" %><br />
            <%= f.email_field :email, autofocus: true %>
        </div>
        <div class="field">
            <%= f.label :contraseña, :class => "formLabel" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me%>
            <%= f.label :recuérdame, :class => "formLabel"%>          
          </div>
        <% end -%>
        <div class="actions">
            <%= f.submit "Iniciar Sesión", :class => "loginBtn"%>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>