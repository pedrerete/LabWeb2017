<% if current_user && (current_user.superadmin_role? || current_user.supervisor_role?) %>
    <center>
    <%= link_to 'Agregar Producto', new_product_path %>
    </center>
<% end %>

<% if @news.size == 0 %>
  <center>
    <p>Nada por aquí</p>
  </center>
  <hr>
<% end %>


<!-- Page Features -->

<!-- Title -->
<div class="row">
    <div class="col-lg-12" align="center">
        <h2>Catálogo</h2>
    </div>
</div>

<div class="row text-center">

    <% @products.each do |product| %>
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <%= image_tag product.image.url, :size => "300x300"%>
            <div class="caption">
                <h3><%= product.productName %></h3>
                <p><%= product.productDescription %></p>
                <p>
                    <span class="btn btn-primary">
                    <%= link_to 'Comprar', controller: 'cart' %> </span> 
                </p>
                    <a href="">
                        <%= link_to 'Show', product_path(product) %>
                    </a>
                <% if current_user &&  (current_user.superadmin_role? || current_user.supervisor_role?) %>
                    <a href="">
                        <%= link_to 'Edit', edit_product_path(product) %>
                    </a>
                    <a href="">
                        <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?'}%>
                    </a>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>

</div>
<!-- /.row -->
