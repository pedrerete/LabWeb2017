<%= form_for @event do |f| %>
	<% if @event.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@event.errors.count, "error") %> prohibited this news from being saved:
	      </h2>
	      <ul>
	        <% @event.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
    <% end %>

	<p>
		<%= f.label :Titulo %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :Texto %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.label :Fecha %><br>
		<%= f.date_field :date %>
	</p>

	<%= image_tag @event.image.url if @event.image_stored? %>
	
	<p>
		<%= f.label :image %><br>
		<%= f.file_field :image %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
<% end %>