<%= form_for @product do |f| %>
	<% if @product.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
	      </h2>
	      <ul>
	        <% @product.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
    <% end %>

	<p>
		<%= f.label :Nombre %><br>
		<%= f.text_field :productName %>
	</p>

	<p>
		<%= f.label :Descripción %><br>
		<%= f.text_area :productDescription, size: "35x6" %>
	</p>

	<p>
		<%= f.label :Precio %><br>
		<%= f.number_field :price %>
	</p>
	
	<%= image_tag @product.image.thumb('300x300#').url if @product.image_stored?%>


	<p>
		<%= f.label :Imagen %><br>
		<%= f.file_field :image %>
	</p>

	<p>
		<%= f.label :Categoría%><br>
		<%= select_tag(:category,  options_from_collection_for_select(Category.all, :id, :categoryName) )%>
	</p>
	<br>
	<p>
		<%= f.submit "Agregar", :class => "addBtn"%>
	</p>
<% end %>