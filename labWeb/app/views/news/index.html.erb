<div class="container">
  <div class="row">
    <% @news.each do |news| %>
    <div class="col-md-3">
      <img src="http://placehold.it/250x250" alt="">
      <div class="caption">
        <h3><%= news.title %></h3>
      </div>
      <div class="links">
        <a href="">
            <%= link_to 'Show', news_path(news) %>
        </a>
        <a href="">
            <%= link_to 'Edit', edit_news_path(news) %>
        </a>
        <a href="">
            <%= link_to 'Destroy', news_path(news), method: :delete, data: { confirm: 'Are you sure?'}%>
        </a>
      </div>
    </div>
    <% end %>
  </div>
</div>


